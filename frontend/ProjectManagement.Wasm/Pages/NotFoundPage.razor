@page "/not-found"                                                                                                    
@using Radzen                                                                                                         
@using Radzen.Blazor                                                                                                  
@inject NavigationManager Navigation                                                                                  
                                                                                                                        
<PageTitle>Not found</PageTitle>                                                                                      
                                                                                                                        
<div class="not-found-container">                                                                                     
    <RadzenIcon Icon="search_off" IconColor="var(--rz-text-secondary-color)" Style="font-size: 4rem;" />              
    <RadzenText TextStyle="TextStyle.H4" Text="Page Not Found" />                                                     
    <RadzenText TextStyle="TextStyle.Body1" Text="Sorry, there's nothing at this address." />                         
    <RadzenButton Text="Go Home" Click="@(() => Navigation.NavigateTo("/"))" ButtonStyle="ButtonStyle.Primary"        
                  class="mt-3" />                                                                                                       
</div>